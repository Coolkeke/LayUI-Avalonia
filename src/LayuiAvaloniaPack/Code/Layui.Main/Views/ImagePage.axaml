                                    </GeometryDrawing>
                                </DrawingGroup>
                            </DrawingGroup>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </Image.Source>
            </Image>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="20"
                Text="读取当前程序文件加下面GIF图片" />
            <lay:LayGifImage SourceUri="assembly://Assets/Test2.gif" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="20"
                Text="读取程序内嵌GIF图片" />
            <lay:LayGifImage SourceUri="avares://LayuiApp.Desktop/Assets/Test.gif" />
        </StackPanel>
    </ScrollViewer>

</UserControl>
