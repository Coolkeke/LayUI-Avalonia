<UserControl
    x:Class="Layui.Main.Views.CarouselPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lay="using:LayUI.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <lay:LayCarousel
                Height="400"
                Margin="5"
                ItemsSource="{Binding Items}"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                Type="Hover">
                <lay:LayCarousel.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="{DynamicResource Green}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </lay:LayCarousel.ItemTemplate>
            </lay:LayCarousel>
            <lay:LayCarousel
                Height="400"
                Margin="5"
                IsAutoSwitch="True"
                ItemsSource="{Binding Items}"
                Type="Hover">
                <lay:LayCarousel.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="{DynamicResource Green}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </lay:LayCarousel.ItemTemplate>
            </lay:LayCarousel>

            <lay:Lay3DCarousel
                Width="500"
                Height="200"
                Margin="10"
                Type="Hover">
                <lay:Lay3DCarouselItem Background="Red" Content="1" />
                <lay:Lay3DCarouselItem Background="AliceBlue" Content="2" />
                <lay:Lay3DCarouselItem Background="AntiqueWhite" Content="3" />
                <lay:Lay3DCarouselItem Background="Aqua" Content="4" />
                <lay:Lay3DCarouselItem Background="Aquamarine" Content="5" />
                <lay:Lay3DCarouselItem Background="Aqua" Content="6" />
                <lay:Lay3DCarouselItem Background="Beige" Content="7" />
                <lay:Lay3DCarouselItem Background="Bisque" Content="8" />
                <lay:Lay3DCarouselItem Background="BlanchedAlmond" Content="9" />
                <lay:Lay3DCarouselItem Background="Chartreuse" Content="10" />
            </lay:Lay3DCarousel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
